<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user.myapplication.RelativeLayout">

    <!--
    相对于父布局的定位以及相对于控件的定位
    -->
    <Button
        android:id="@+id/RelativeLayout_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Button1"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/RelativeLayout_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Button2"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/RelativeLayout_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Button3"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/RelativeLayout_btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Button4"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/RelativeLayout_btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="Button5"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/RelativeLayout_btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/RelativeLayout_btn3"
        android:layout_toLeftOf="@+id/RelativeLayout_btn3"
        android:text="Button6"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/RelativeLayout_btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/RelativeLayout_btn3"
        android:layout_toRightOf="@+id/RelativeLayout_btn3"
        android:textAllCaps="false"
        android:text="Button7"/>

    <Button
        android:id="@+id/RelativeLayout_btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayout_btn3"
        android:layout_toLeftOf="@+id/RelativeLayout_btn3"
        android:text="Button8"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/RelativeLayout_btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayout_btn3"
        android:layout_toRightOf="@+id/RelativeLayout_btn3"
        android:textAllCaps="false"
        android:text="Button9"/>

</RelativeLayout>
